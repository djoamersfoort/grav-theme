{% macro loop(pages) %}
{% for page in pages.children.visible %}
{% set is_current_page = (page.active or page.activeChild) %}
{% set current_page = is_current_page ? 'site-nav__link--active' : '' %}
{% set current_page_text = is_current_page ? ' <span class="sr-only">(huidig)</span>'%}
{% set link_class = 'site-nav__link ' ~ current_page %}
{% if page.children.visible.count > 0 %}
{% set link_name = "nav-main-toggle-#{loop.index}" %}
    <li class="site-nav__item dropdown">
      <input type="checkbox" id="{{ link_name }}" class="site-nav__dropdown-toggle" />
      <label
        role="button"
        for="{{ link_name }}"
        class="{{ link_class }} site-nav__link--dropdown dropdown-toggle"
        data-single-select-group="nav-main-toggle"
        data-toggle="dropdown"
        aria-haspopup="true"
        aria-expanded="false">
        {{ page.menu ~ current_page_text }}
      </label>
      <div class="dropdown-menu site-nav__dropdown">
        {# Hide page-owns for now #}
        {#
        <a class="dropdown-item" href="{{ page.url }}">{{ page.menu }}</a>
        <div class="dropdown-divider"></div>
        #}
  {% for p in page.children.visible %}
        <a class="dropdown-item" href="{{ p.url }}">{{ p.menu }}</a>
  {% endfor %}
      </div>
    </li>
{% else %}
    <li class="site-nav__item">
      <a href="{{ page.url }}"
        class="{{ link_class }}">
        {{ page.menu ~ current_page_text }}
      </a>
    </li>
{% endif %}
{% endfor %}
{% endmacro %}

<header class="site-header">
  <div role="navigation" class="site-header__container">
    <a class="site-header__brand" href="{{ site_root }}">
      <img src="{{ site_logo_svg }}"
        class="site-header__brand-logo"
        alt="Stichting De Jonge Onderzoekers Amersfoort" />
    </a>
    <ul class="site-header__nav-top site-nav">
{{ _self.loop(pages) }}
    </ul>
  </div>
</header>
